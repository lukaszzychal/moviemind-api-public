                  "pm.test(\"Status code is 200\", function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.test(\"Response contains data array\", function () { pm.expect(json).to.have.property('data').that.is.an('array'); });",
                  "pm.test(\"Movies expose descriptions_count\", function () { if (Array.isArray(json.data)) { json.data.forEach(function (item) { pm.expect(item).to.have.property('descriptions_count'); }); } });",
                  "if (Array.isArray(json.data) && json.data.length > 0) {",
                  "  const first = json.data[0];",
                  "  if (first.slug) { pm.collectionVariables.set('movieSlug', first.slug); }",
                  "  if (first.id) { pm.collectionVariables.set('movieId', first.id); }",
                  "  if (first.default_description && first.default_description.id) { pm.collectionVariables.set('movieDefaultDescriptionId', first.default_description.id); }",
                  "}",
                  "pm.collectionVariables.set('moviesLastResponse', JSON.stringify(json));"
                ]
              }
            }
