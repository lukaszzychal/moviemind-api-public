{
  "info": {
    "name": "MovieMind API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "d5c5d9f2-3b1b-4f6a-8c2a-1234567890ab"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000/api" }
  ],
  "item": [
    {
      "name": "List Movies",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/v1/movies", "host": ["{{baseUrl}}"], "path": ["v1","movies"] }
      }
    },
    {
      "name": "Show Movie",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/v1/movies/123", "host": ["{{baseUrl}}"], "path": ["v1","movies","123"] }
      }
    },
    {
      "name": "Show Person",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/v1/people/456", "host": ["{{baseUrl}}"], "path": ["v1","people","456"] }
      }
    },
    {
      "name": "Generate (MOVIE)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"entity_type\": \"MOVIE\",\n  \"entity_id\": 123,\n  \"locale\": \"pl-PL\",\n  \"context_tag\": \"modern\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/v1/generate", "host": ["{{baseUrl}}"], "path": ["v1","generate"] }
      }
    },
    {
      "name": "Generate (PERSON)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"entity_type\": \"PERSON\",\n  \"entity_id\": 456,\n  \"locale\": \"en-US\",\n  \"context_tag\": \"scholarly\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/v1/generate", "host": ["{{baseUrl}}"], "path": ["v1","generate"] }
      }
    },
    {
      "name": "Show Job",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/v1/jobs/7f9d5a7c-6e6c-4f3a-9c5b-3a7f9b8b1e2d", "host": ["{{baseUrl}}"], "path": ["v1","jobs","7f9d5a7c-6e6c-4f3a-9c5b-3a7f9b8b1e2d"] }
      }
    }
  ]
}


