#!/bin/bash
#
# Pre-commit hook for MovieMind API
# Runs Laravel Pint, PHPStan, and GitLeaks before commit
#
# To install: cp scripts/git-hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}üîç Running pre-commit checks...${NC}"

# Check if we're in the api directory or project root
if [ -d "api" ]; then
    API_DIR="api"
else
    API_DIR="."
fi

# 1. GitLeaks - Secret detection (ALWAYS run FIRST, regardless of file types)
echo -e "${YELLOW}üîê Running GitLeaks...${NC}"

if command -v gitleaks &> /dev/null; then
    if gitleaks protect --source . --verbose --no-banner --staged 2>/dev/null; then
        echo -e "${GREEN}‚úÖ GitLeaks: No secrets found${NC}"
    else
        echo -e "${RED}‚ùå GitLeaks: Secrets detected!${NC}"
        echo -e "${YELLOW}Please remove secrets before committing.${NC}"
        echo -e "${YELLOW}Common locations: .env, .env.bak, config files with hardcoded credentials${NC}"
        gitleaks protect --source . --verbose --no-banner --staged
        exit 1
    fi
else
    echo -e "${RED}‚ö†Ô∏è  GitLeaks not installed. Secret detection skipped!${NC}"
    echo -e "${YELLOW}Install with: brew install gitleaks${NC}"
    echo -e "${YELLOW}Or run: ./scripts/setup-pre-commit.sh${NC}"
    echo -e "${YELLOW}‚ö†Ô∏è  Proceeding without secret check (NOT RECOMMENDED)${NC}"
fi

# Check if PHP files are staged
PHP_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E "\.php$" || true)

if [ -z "$PHP_FILES" ]; then
    echo -e "${GREEN}‚úÖ No PHP files to check${NC}"
    exit 0
fi

echo -e "${YELLOW}üìù PHP files to check:${NC}"
echo "$PHP_FILES"

# 2. Laravel Pint - Fix code style
echo -e "${YELLOW}üé® Running Laravel Pint...${NC}"
cd "$API_DIR" || exit 1

# Check if pint is available via vendor/bin (Laravel Pint)
if [ -f "vendor/bin/pint" ]; then
    PINT_CMD="vendor/bin/pint"
elif php artisan pint --test 2>/dev/null; then
    PINT_CMD="php artisan pint"
elif command -v pint &> /dev/null; then
    PINT_CMD="pint"
else
    echo -e "${RED}‚ùå Laravel Pint not found. Skipping code style check.${NC}"
    PINT_CMD=""
fi

if [ -n "$PINT_CMD" ]; then
    if $PINT_CMD --test 2>/dev/null; then
        echo -e "${GREEN}‚úÖ Laravel Pint: Code style OK${NC}"
    else
        echo -e "${RED}‚ùå Laravel Pint: Code style issues found${NC}"
        echo -e "${YELLOW}Running auto-fix...${NC}"
        $PINT_CMD
        
        # Add fixed files back to staging
        git add -u
        
        echo -e "${GREEN}‚úÖ Code style auto-fixed. Please review and commit again.${NC}"
        exit 1
    fi
fi

# 3. PHPStan - Static analysis
echo -e "${YELLOW}üîç Running PHPStan...${NC}"

if vendor/bin/phpstan analyse --memory-limit=2G 2>/dev/null; then
    echo -e "${GREEN}‚úÖ PHPStan: No errors found${NC}"
else
    echo -e "${RED}‚ùå PHPStan: Errors found${NC}"
    echo -e "${YELLOW}Please fix PHPStan errors before committing.${NC}"
    vendor/bin/phpstan analyse --memory-limit=2G
    exit 1
fi

echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
exit 0

